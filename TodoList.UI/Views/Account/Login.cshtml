@model TodoList.UI.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div> 
            }
            <div class="mb-3">
                @Html.LabelFor(m => m.Username, "Username", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Username, null, new { @class = "form-control", @placeholder = "name@example.com" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Password, "Password", new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div>
                @Html.HiddenFor(m => m.ReturnUrl)
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
